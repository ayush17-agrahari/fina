<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Result Title -->
    <TextView
        android:id="@+id/resultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Result"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <!-- Score Text -->
    <TextView
        android:id="@+id/finalScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You scored: 8/10"
        android:textSize="18sp"
        android:layout_below="@id/resultTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <!-- Restart Button -->
    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Quiz"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/finalScoreText"
        android:layout_marginTop="50dp"
        android:onClick="restartQuiz"/>

</RelativeLayout>

"<!--A TextView (@id/resultTitle) displays the result title ("Quiz Result").
A TextView (@id/finalScoreText) displays the user's score.
A Restart Button allows the user to restart the quiz.-->"