"<!--Checkstyle is a static code analysis tool that helps enforce coding standards by checking Java code for adherence to a defined style."-->"
<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">
        <!-- Enforce naming conventions -->
        <module name="TypeName"/>
        <module name="MethodName"/>
        <module name="PackageName"/>

        <!-- Enforce indentation -->
        <module name="Indentation"/>

        <!-- Enforce line length limits -->
        <module name="LineLength">
            <property name="max" value="120"/>
        </module>

        <!-- Enforce proper Javadoc usage -->
        <module name="JavadocMethod"/>
        <module name="JavadocType"/>
    </module>
</module>
